{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}